<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:topRightRadius="10dip" android:bottomRightRadius="10dip"/>
            <gradient android:angle="-90" android:startColor="#00E2FF" android:endColor="#0E00CF"  />
            <stroke android:width="5px" android:color="#00E2FF" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:topRightRadius="10dip" android:bottomRightRadius="10dip"/>
            <gradient android:angle="-90" android:startColor="#0E00CF" android:endColor="#001630" />
            <stroke android:width="5px" android:color="#000000" />
        </shape>
    </item>
</selector>